<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainMenuActivity"
    tools:showIn="@layout/activity_menu_principal"
    android:background="@color/fundo2">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/menu1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/ibResumos"/>

    <ImageButton
        android:id="@+id/ibTabela"
        android:layout_width="160dp"
        android:layout_height="197dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="180dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/tabela"/>

    <ImageButton
        android:id="@+id/ibQuiz"
        android:layout_width="160dp"
        android:layout_height="235dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/quiz" />

    <ImageButton
        android:id="@+id/ibGaleria"
        android:layout_width="160dp"
        android:layout_height="228dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="197dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/galeria"/>

    <ImageButton
        android:id="@+id/ibMontar"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="389dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/montar"/>

    <ImageButton
        android:id="@+id/ibPesquisa"
        android:layout_width="160dp"
        android:layout_height="158dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="410dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/pesquisa"/>

</GridLayout>