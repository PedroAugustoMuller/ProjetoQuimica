<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QuizMenuActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_quiz_menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro conteúdo"
                android:id="@+id/bCadastroConteudos"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro pergunta"
                android:id="@+id/bCadastroPerguntas"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz"
                android:id="@+id/bQuiz"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar nivel de conteudo"
                android:id="@+id/bConteudoNivel"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bVisualizarlistaNiveisConteudos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visualizar lista de niveis conteudos"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnóstico"
                android:id="@+id/bDiagnostico"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gráficos de Desempenho por Conteúdo"
                android:id="@+id/bGraficoDesempenhoConteudo"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10Questionários"
                android:id="@+id/bGraficoDezQuestionarios"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gráfico Niveis Por Conteudo"
                android:id="@+id/bGraficoNiveisPorConteudo"
                android:background="@drawable/botaoorganica_customizado"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>