<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VisualizaPercursoActivity"
    tools:showIn="@layout/activity_visualiza_percurso"
    android:padding="@dimen/fab_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/tvVisualizaTitulo"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tvVisualizaSaudacao"
        android:textColor="#00CCB6"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:id="@+id/ivVisualizaUpgrade"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade de Vidas nesse Conteúdo:"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"/>
    <RatingBar
        android:id="@+id/rtbVisualizaPercursoVidas"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize=".1"
        android:rating="1"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_rating"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Responder Perguntas"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_perguntas2"
        android:id="@+id/bVisualizaPercursoQuiz"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/botaoorganica_customizado"
        android:textSize="16dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Histórico de resoluções"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_analises"
        android:id="@+id/bVisualizaPercursoHistorico"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/botaoorganica_customizado"
        android:textSize="16dp"/>
</LinearLayout>